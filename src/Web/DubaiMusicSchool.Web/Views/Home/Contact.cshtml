@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout";
}



<!-- page title -->
<section class="page-title-section overlay" data-background="images/backgrounds/page-title.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ul class="list-inline custom-breadcrumb">
                    <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="#">@ViewData["Title"]</a></li>
                    <li class="list-inline-item text-white h3 font-secondary @@nasted"></li>
                </ul>
                <p class="text-lighten">Reach out to us and we will get back to you within 24 hours.</p>
            </div>
        </div>
    </div>
</section>
<!-- /page title -->


<script src="https://www.google.com/recaptcha/api.js?render=6LfZNvAUAAAAAENmUpLFXDSE6YCLLjIaopDAJWIX"></script>
<link src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/fontawesome.min.css" type="text/css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js"></script>



<!-- about -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <component type="typeof(DubaiMusicSchool.Web.Components.ContactComponent)" render-mode="ServerPrerendered" />
                @Html.AntiForgeryToken()
            </div>
        </div>
    </div>
</section>
<!-- /about -->




@section Scripts{
    <script src="~/_framework/blazor.server.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?render=6LfZNvAUAAAAAENmUpLFXDSE6YCLLjIaopDAJWIX"></script>

    <script>
        runCaptcha = function (actionName) {
            return new Promise((resolve, reject) => {
                grecaptcha.ready(function () {
                    grecaptcha.execute('6LfZNvAUAAAAAENmUpLFXDSE6YCLLjIaopDAJWIX', { action: 'BlazorContactForm' }).then(function (token) {
                        resolve(token);
                    });
                });
            });
        };
    </script>
}